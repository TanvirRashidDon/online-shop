<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
        <tr>
          <td><%= product.brand %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= link_to 'Show', [@brand, product] %></td>
          <td>
            <%#= link_to 'Edit', edit_brand_product_path(@brand, product) %>
            <%= link_to 'Edit', [:edit, @brand, product] %>
          </td>
          <td>
            <%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to 'Destroy',[@brand, product], method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

