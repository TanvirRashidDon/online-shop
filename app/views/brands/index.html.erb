<p id="notice"><%= notice %></p>

<h1>Brands</h1>

<table class="ui sortable called table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td class="positive"><%= link_to 'Show', brand %></td>
        <td class="warning"><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td class="negative"><%= link_to semantic_icon('trash')+'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>
